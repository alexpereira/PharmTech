<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/fragment_mix_match"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:gravity="center"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <Button
            android:id="@+id/mix_match_button1"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="20dp"
            android:layout_margin="5dp"

            android:text="1"
            android:textSize="32sp">
        </Button>

        <Button
            android:id="@+id/mix_match_button2"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="20dp"
            android:layout_margin="5dp"

            android:text="2"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/mix_match_button3"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="20dp"
            android:layout_margin="5dp"

            android:text="3"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/mix_match_button4"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:text="4"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/mix_match_button5"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:text="5"
            android:textSize="30sp">
        </Button>

        <Button
            android:id="@+id/mix_match_button6"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="20dp"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="30sp">

        </Button>

    </LinearLayout>


</LinearLayout>